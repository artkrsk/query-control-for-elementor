{
  "name": "@arts/query-control-for-elementor",
  "description": "A set of custom made controls for Elementor to query posts, terms and many more",
  "author": "Artem Semkin",
  "version": "3.2.1",
  "type": "module",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "pnpm": {
    "overrides": {
      "vite": ">=7.3.0",
      "js-yaml": ">=4.1.1",
      "lodash": ">=4.17.23",
      "qs": ">=6.14.2",
      "systeminformation": ">=5.31.0",
      "swiper": ">=12.1.2"
    }
  },
  "dependencies": {
    "@arts/elementor-types": "file:../elementor-types"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jquery": "^3.5.33",
    "@types/jqueryui": "^1.12.24",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "4.0.18",
    "cypress": "^15.10.0",
    "swiper": "^12.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "npm-check-updates": "^19.4.1",
    "prettier": "^3.8.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "node __build__/src/index.js dev",
    "build": "node __build__/src/index.js build",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && pnpm install",
    "format": "prettier --write 'src/ts/**/*.{ts,tsx,json,css}'",
    "format:check": "prettier --check 'src/ts/**/*.{ts,tsx,json,css}'",
    "lint": "eslint 'src/ts/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/ts/**/*.{ts,tsx}'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  }
}
